<?xml version="1.0" encoding="UTF-8"?>
<theme>
  <formatVersion>7</formatVersion>

  <view name="splash">
    <splash name="splash">
      <backgroundColor>000000FF</backgroundColor>
    </splash>

    <image name="progressbar">
      <origin>0 0</origin>
      <pos>0.25 0.87</pos>
      <size>0.5 0.036</size>
      <color>3675CA</color>
      <colorEnd>3675CA</colorEnd>
      <roundCorners>0.01</roundCorners>
    </image>

    <image name="progressbar:active">
      <tile>true</tile>
      <path>./art/progress.png</path>
      <color>4036C9</color>
      <colorEnd>36C0C9</colorEnd>
    </image>

    <image name="background">
      <linearSmooth>true</linearSmooth>
      <path>./art-cas/splash.jpeg</path>
      <pos>0.5 0.5</pos>
      <origin>0.5 0.5</origin>
      <maxSize>1 1</maxSize>
      <zIndex>1</zIndex>
    </image>

    <text name="label">
      <color>FFFFFFFF</color>
      <glowColor>00000018</glowColor>
      <glowSize>3</glowSize>
      <glowOffset>1</glowOffset>
    </text>
  </view>
</theme>
